// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  mailAddress  String    @unique
  username     String
  passwordHash String
  createdAt    DateTime  @default(now())
  deletedAt    DateTime?

  Room Room[]

  @@index([mailAddress])
}

model Room {
  id        String    @id @default(cuid())
  name      String    @unique
  userId    String
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  messages Messages[]
  user     User       @relation(fields: [userId], references: [id])

  @@index([name])
  @@index([userId])
}

model Messages {
  id        String    @id @default(cuid())
  roomId    String
  message   String
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  room Room @relation(fields: [roomId], references: [id])
}
